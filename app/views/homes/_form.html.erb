      <%= f.label :comments %><br>
      <%= f.text_area :comments, :maxlength=>'500', :cols => 80, :rows => 8 %>
    </p>
</div>

      <div id = "submit_clear_button">
    <p>
      <%= f.submit :Submit%>
    </p>

      <p>
        <%= button_tag "Clear", type: :reset %>
      </p>
