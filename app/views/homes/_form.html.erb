<div id = "background_color">
<div id = "categories">
<%= form_for @home do |f| %>

    <b>Category</b><br>
    <%= f.radio_button :category, 'Place Order' %> Place Order </br>
    <%= f.radio_button :category, 'Order Status' %> Order Status </br>
    <%= f.radio_button :category, 'Catalog Questions' %> Catalog Quesitons </br>
    <%= f.radio_button :category, 'Internet Orders' %> Internet Orders </br>
    <%= f.radio_button :category, 'Mail Order' %> Mail Order </br>
    <%= f.radio_button :category, 'Remove from Mailing List' %> Remove from Mailing List </br>
    <%= f.radio_button :category, 'Returns' %> Returns </br>
